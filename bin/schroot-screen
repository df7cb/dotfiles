#!/bin/sh

# option parsing

: ${CHROOT:=sid}
export CHROOT

while getopts "c:g" opt ; do
	case $opt in
	c) CHROOT="$OPTARG" ;;
	g) GIT="no" ;;
	*) exit 5 ;;
	esac
done
# shift away args
shift $(($OPTIND - 1))

[ "$1" ] && export PACKAGE="$1"

# reexec ourselves through screen

case $TERM in
	screen*) ;;
	*) exec screen $0 ; exit 1 ;;
esac

# main program

run () {
	echo
	echo "### $@"
	"$@"
}

# begin session
export ID="$USER-$CHROOT${PACKAGE:+-$PACKAGE}"
run schroot -b -c $CHROOT -n $ID
run dd-schroot-cmd -c $ID apt-get update
run dd-schroot-cmd -c $ID apt-get -y upgrade
run dd-schroot-cmd -c $ID apt-get -y install exuberant-ctags git quilt vim

if [ "$PACKAGE" ]; then
	run dd-schroot-cmd -c $ID apt-get -y build-dep $PACKAGE
	mkdir -p ~/$PACKAGE
	cd ~/$PACKAGE
	if [ -z "${GIT:-}" ]; then
		run schroot -r -c $ID debcheckout $PACKAGE
	else
		run schroot -r -c $ID apt-get source $PACKAGE
	fi
	cd $PACKAGE*/
	[ "${GIT:-}" ] && run schroot -r -c $ID origtargz
fi

# enter session
run schroot -r -c $ID

# end session
run schroot -e -c $ID
