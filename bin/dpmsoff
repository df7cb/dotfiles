#!/bin/sh

SLEEP=1
TIMEOUT=1200
DISABLE=1230
XLOCKDISABLE=60

if [ "$1" = init ] ; then
	:
elif [ -z "$1" ] ; then  # no argument
	xset dpms 0 0 $SLEEP
	sleep $SLEEP
else		# with argument
	xset dpms 0 0 $XLOCKDISABLE
	xlock -resetsaver -mode $1
fi

xset s $TIMEOUT
xset dpms 0 0 $DISABLE 2> /dev/null
